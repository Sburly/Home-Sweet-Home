<div class="post">
    <article class="post__card">
        <section class="post__image">
            <img class="img-fluid" src="/images/cozy-apartment-living-room-ideas-kymacy.jpg" alt="">
        </section>
        <section class="post__info">
            <div>
                <h2 class="post__name"><%= post.name %></h2>
                <% if(Number(post.rating)) { %> 
                    <span class="post__rating"><%= post.rating %>/5</span>
                <% } else { %>
                    <span class="post__rating">N/D</span>
                <% } %>
            </div>
            <p><%= post.description %></p>
            <div>
                <% if(!post.author.username) { %>
                    <small>by You</small>
                <% } else { %>
                    <small>by <%= post.author.username %></small>
                <% } %>
                <small><%= post.location %></small>
            </div>
        </section>
        <section class="post__price">
            <span><%= post.price %>â‚¬/day</span>
        </section>
        <section class="post__button">
            <a href="/<%= post._id %>" class="button--main">View More</a>
        </section>
    </article>
</div>