<div class="card--review">
    <div class="card--review__inner">
        <div class="card--review__delete">
            <% if(currentUser && String(currentUser._id) === String(review.author._id)) { %> 
                <form action="/<%= post._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="button--transparent">&times;</button>
                </form>
            <% } %>
        </div>
        <h3 class="card--review__title"><%= review.title %></h3>
        <div class="card--review__rating">
            <span><%= review.rating %>/5</span>
        </div>
        <p class="card--review__body"><%= review.body %></p>
    </div>
</div>