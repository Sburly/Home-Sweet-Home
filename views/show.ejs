<% layout('layout') %>
<article class="post--show">
    <section class="post--show__image">
        <img class="img-fluid" src="/images/cozy-apartment-living-room-ideas-kymacy.jpg" alt="">
    </section>

    <section class="post--show__info">
        <div>
            <h2><%= post.name %></h2>
            <div>
                <h3><b>4.5</b>/5</h3>
                <button class="button--info" id="showInfoMenu"><%- partial('partials/svgs/info') %></button>
            </div>
        </div>
        <p><%= post.description %></p>
    </section>

    <section class="post--show__map">
        <div style="background: black;"></div>
    </section>

    <section class="post--show__user">
        <div class="post--show__user__about">
            <small>by Sburly</small>
            <small><%= post.location %></small>
        </div>
        <div>
            <div><%= post.price %>â‚¬/day</div>
            <button class="button--main button--book">Book Now!</button>
        </div>
    </section>
    <%- partial('partials/menu', { post }) %>
</article>
<script src="/js/menu.js"></script>